<div class="page-header">
  <h1>
    Reduce, Relax

  </h1>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr><h3>You hate these things...time to get rid of them!</h3>
        <th>Name</th>
        <th>Picture</th>
        <!-- <th>Description</th>
        <th>Category</th>
        <th>Location</th> -->
        <th>Method</th>
        <!-- <th>Posted by</th> -->
        <th>Joy Level</th>
        <th>Schedule your purge date!</th>
      </tr>

      <% @items.where("joy_level = 'Hate it'").each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.url_picture %></td>
        <!-- <td><%= item.description %></td>
        <td><%= item.category %></td>
        <td><%= item.location %></td> -->
        <td><%= item.status %></td>
        <!-- <td><%= item.posted_by %></td> -->
        <td><%= item.joy_level %></td>
        <form action="/update_reduce/<%= item.id %>" method="post">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
          <td class="form-group">

            <input type="date" id="action_date" name="action_date" placeholder="Action Date" class="form-control" value="<%= item.action_date %>">
            <td>
              <button class="btn btn-primary">Save!
              </button>
            </td>
          </td>
        </form>
        <td>
          <a href="/items/<%= item.id %>" class="">Show</a>
          <a href="/items/<%= item.id %>/edit" class="">Edit</a>
          <a href="/delete_item/<%= item.id %>" class="" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
