<div class="page-header">
  <h3>Item #<%= @item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @item.name %></dd>

      <dt>Url picture</dt>
      <dd><%= @item.url_picture %></dd>

      <dt>Description</dt>
      <dd><%= @item.description %></dd>

      <dt>Category</dt>
      <dd><%= @item.category %></dd>

      <dt>Location</dt>
      <dd><%= @item.location %></dd>

      <dt>Status</dt>
      <dd><%= @item.status %></dd>

      <dt>Posted by</dt>
      <dd><%= @item.posted_by %></dd>

      <dt>Joy level</dt>
      <dd><%= @item.joy_level %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/items" class="btn btn-primary">
        Back
      </a>
      <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_item/<%= @item.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
