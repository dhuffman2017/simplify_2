<div class="page-header">
  <h1>
    Items
    <a href="/items/new" class="btn btn-lg btn-success">New Item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Picture</th>
        <th>Description</th>
        <th>Category</th>
        <th>Location</th>
        <th>Remove?</th>
        <!-- <th>Posted by</th> -->
        <th>Joy Level</th>
        <th>Actions</th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.url_picture %></td>
        <td><%= item.description %></td>
        <td><%= item.category %></td>
        <td><%= item.location %></td>
        <td><%= item.status %></td>
        <!-- <td><%= item.posted_by %></td> -->
        <td><%= item.joy_level %></td>
        <td>
          <a href="/items/<%= item.id %>" class="btn btn-primary">Show</a>
          <a href="/items/<%= item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_item/<%= item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
